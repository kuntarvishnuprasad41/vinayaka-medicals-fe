generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int       @id @default(autoincrement())
  name      String
  email     String    @unique
  password  String
  role      Role      @default(USER)
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  stores    Store[]   @relation("UserStores") // Admins can manage stores
  payments  Payment[] @relation("UserPayments") // Users can make payments
}

model Store {
  id        Int       @id @default(autoincrement())
  name      String
  address   String
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  userId    Int
  user      User      @relation("UserStores", fields: [userId], references: [id]) // Store belongs to a User
  payments  Payment[] @relation("StorePayments") // Store has many payments
}

model Payment {
  id         Int         @id @default(autoincrement())
  billNumber String
  amount     Float
  dateTime   DateTime    @default(now())
  type       PaymentType
  amountPaid Float
  storeId    Int
  store      Store       @relation("StorePayments", fields: [storeId], references: [id]) // Payment is linked to a Store
  userId     Int
  user       User        @relation("UserPayments", fields: [userId], references: [id]) // Payment is linked to a User
  createdAt  DateTime    @default(now())
}

enum PaymentType {
  CASH
  UPI
  CREDIT
  PARTIAL
}

enum Role {
  ADMIN
  MEDICAL_DATA_ENTRY
  USER
}
