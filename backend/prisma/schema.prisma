generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int       @id @default(autoincrement())
  name     String
  email    String    @unique
  password String
  role     Role
  address  String? // Optional address for users who represent medical stores
  entries  Entry[]
  payments Payment[]
}

model Entry {
  id          Int      @id @default(autoincrement())
  billNumber  String
  amount      Float
  paymentType String
  amountPaid  Float
  entryDate   DateTime @default(now())
  userId      Int
  user        User     @relation(fields: [userId], references: [id])
}

model Payment {
  id         Int         @id @default(autoincrement())
  billNumber String
  amount     Float
  dateTime   DateTime    @default(now())
  type       PaymentType
  amountPaid Float
  userId     Int
  user       User        @relation(fields: [userId], references: [id])
}

enum Role {
  ADMIN
  MEDICAL_STORE
  DATA_ENTRY
}

enum PaymentType {
  CASH
  UPI
  CREDIT
  PARTIAL
}
